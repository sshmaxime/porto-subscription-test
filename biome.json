{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedPrivateClassMembers": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
